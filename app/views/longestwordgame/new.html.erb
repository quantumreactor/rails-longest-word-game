<h1>New game</h1>

<div class="rowletters" style="display: flex;">
  <% @letters.each do |letter| %>
  <div class="letter" style="background: #1e81b0; color: white; padding: 10px; margin: 8px; font-size:30px; font-family:monospace; border-radius:8px;">
    <%= letter %>
  </div>
    <% end %>
</div>


<form action="/score" method="post">
<p>What is the longest word you can find?</p>
<input type="text" value="" name="myword">
<input type="submit" value="Score my answer!" id="submitbutton">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :theletters, @letters.join %>


</form>